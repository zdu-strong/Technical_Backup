{
    "files.exclude": {
        ".mvn": true,
        ".settings": true,
        ".classpath": true,
        ".factorypath": true,
        ".gitignore": true,
        "diff": true,
        ".project": true,
        "diff.cmd": true,
        "diff.exe": true,
        "mvn": true,
        "mvn.cmd": true,
        ".vscode": true,
        "target": true,
        "diff.dmg": true,
    },
    "files.autoSave": "onFocusChange",
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    "extensions.ignoreRecommendations": true,
    "java.silentNotification": true,
    "git.enabled": false,
    "java.debug.settings.onBuildFailureProceed": true,
    "java.jdt.ls.vmargs": "-DmaxCompiledUnitsAtOnce=0",
    "java.showBuildStatusOnStart.enabled": "off",
    "java.configuration.updateBuildConfiguration": "automatic",
    "java.debug.settings.forceBuildBeforeLaunch": false,
    "debug.autoExpandLazyVariables": "on",
    "java.compile.nullAnalysis.mode": "automatic",
    "java.configuration.detectJdksAtStart": true,
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "debug.inlineValues": "on",
    "java.maxConcurrentBuilds": 1,
    "java.typeHierarchy.lazyLoad": false,
    "java.import.gradle.enabled": false,
    "java.import.maven.enabled": true,
    "java.autobuild.enabled": true,
    "java.server.launchMode": "Standard",
    "workbench.editor.enablePreview": false,
    "java.debug.settings.exceptionBreakpoint.skipClasses": [
        "$JDK", // Skip the JDK classes from the default system bootstrap classpath, such as rt.jar, jrt-fs.jar.
        "$Libraries", // Skip the classes from application libraries, such as Maven, Gradle dependencies.
    ],
    "java.debug.settings.stepping.skipClasses": [
        "$JDK", // Skip the JDK classes from the default system bootstrap classpath, such as rt.jar, jrt-fs.jar.
        "$Libraries", // Skip the classes from application libraries, such as Maven, Gradle dependencies.
    ],
    "java.debug.settings.stepping.skipConstructors": true,
    "java.debug.settings.stepping.skipStaticInitializers": true,
    "java.debug.settings.stepping.skipSynthetics": true,
    "git.openRepositoryInParentFolders": "never",
}