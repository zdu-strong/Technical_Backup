{
    "files.exclude": {
        ".gitignore": true,
        "package-lock.json": true,
        "tsconfig.json": true,
        ".vscode": true,
        "bin": true,
        "build": true,
        "cypress/tsconfig.json": true,
        "cypress.json": true,
        "postcss.config.js": true,
        "tailwind.config.js": true,
        "config-overrides.js": true,
